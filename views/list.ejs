
   <%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= kindofday %> </h1>
    </div>

    <div class="box">
      <% newListItems.forEach(function(newListItem){ %>

      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name= "checkbox" value="<%=newListItem._id%>" onChange="this.form.submit()">
         <p> <%= newListItem.name %></p>
         </div>
         <input type="hidden" name="listName" value="<%= kindofday %>"></input>
      </form>
        <% }); %>

      <div class="item">
        <form action="/" method="post">
           <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
           <button type="submit" name="list" value=<%= kindofday %>>+</button>
        </form>
     </div>

  </div>


    <%- include("footer") -%>
